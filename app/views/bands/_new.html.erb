<div id="page-wrapper">
  <div class="container-fluid">
    <!-- Page Heading -->
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">
          Dashboard <small>New Band</small>
        </h1>
        <ol class="breadcrumb">
          <li class="active">
            <i class="fa fa-dashboard"></i> Band
          </li>
        </ol>
        <%= render 'admin/flash_messages'%>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= form_for [:admin,@band], :html => { :multipart => true } do |f| %>
          <% if @band.errors.any? %>
            <div id="error_explanation">
              <h2>
                <%= pluralize(@band.errors.count, "error") %> prohibited
                this seminars from being saved:
              </h2>
              <ul>
                <%@band.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="form-group">
            <label class= "pull-left"><%= f.label :name%></label>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <label class= "pull-left" for="example-date-input"><%= f.label :genre %></label>
            <%= f.text_field :genre, class: "form-control" %>
          </div>
          <div class="form-group">
            <label>Choose Artists</label>
            <%= select_tag("artists[]", options_for_select(@artists),:multiple => true, :size => 9 , class: 'select2 form-control') %>
          </div>
          <div class="form-group">
            <label>Category/Genre</label>
            <%= f.select(:category_id, deep_categories_for_select, {include_blank:true , include_hidden:false}  , class: 'select2 form-control')%>
          </div>
          <% if @band.photos.exists? %>
            <% @band.photos.each do |z| %>
              <div class="seminarimage">
                <% if !z.image_file_size.nil? %>
                  <%= image_tag z.image , class: "showimage" %>
                  <%= link_to "Delete Photo",admin_photo_path(z), :method => :delete  , remote: true , class: "photo_delete"%>
                <%else%>
                  <p>
                    Προσθέστε μια φωτογραφία
                  </p>
                <%end%>
              </div>
            <%end%>
          <%end%>
          <div class="control-group">
            <%= f.label :photos, :class => 'control-label' %>
            <div class="form-group">
              <%= file_field_tag "images[]", type: :file, multiple: true ,class: "form-control-file" %>
            </div>
          </div>
          <p>
            <%= f.submit nil , class: 'btn btn-primary' %>
          </p>
        <% end %>
        <%= link_to 'Back', admin_dashboard_path %>
      </div>
    </div>
  </div>
</div>
