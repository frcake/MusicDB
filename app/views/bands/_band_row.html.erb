<tr>
  <td><%=band.name%></td>
  <td><%=band.category.name%></td>
  <td>
    <%= link_to admin_bands_edit_path(band),class: "btn btn-primary btn-xs pull-right" do %>
      <span class="glyphicon glyphicon-edit"></span>Edit</button>
  <%end%>
