<%= render partial: 'admin/admin_dash_nav'%>
<div id="page-wrapper">
  <div class="container-fluid">
    <!-- Page Heading -->
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">
          Dashboard <small>New Artist</small>
        </h1>
        <ol class="breadcrumb">
          <li class="active">
            <i class="fa fa-dashboard"></i> Artist
          </li>
        </ol>
        <%= render 'admin/flash_messages'%>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= form_for [:admin , @artist],:html => { :multipart => true } do |f| %>
          <% if @artist.errors.any? %>
            <div id="error_explanation">
              <h2>
                <%= pluralize(@artist.errors.count, "error") %> prohibited
                this seminars from being saved:
              </h2>
              <ul>
                <% @artist.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="form-group">
            <label for="inputName"  class='pull-left'>Name</label>
            <%= f.text_field :name, class: "form-control",id: 'inputName' , :required => true %>
            <div class="help-block with-errors"></div>
          </div>
          <div class="form-group">
            <label for="inputdescription" class='pull-left'>Description</label>
            <%= f.text_field :description, class: "form-control",id: "inputdescription", :required => true%>
            <div class="help-block with-errors"></div>
          </div>
          <div class="form-group">
            <label for="inputCountry" class='pull-left'>Country</label>
            <%= f.label :country, class: 'pull-left'%>
            <%= f.text_field :country, class: "form-control",id: 'inputCountry', :required => true %>
          </div>
          <div class="form-group">
            <label for="category">Category/Genre</label>
            <%= f.select(:category_id, deep_categories_for_select, {include_blank:true , include_hidden:false} ,id: 'category' , class: 'select2 form-control', :required => true)%>
            <div class="help-block with-errors"></div>
          </div>
          <% if @artist.photos.exists? %>
            <% @artist.photos.each do |z| %>
              <div class="seminarimage">
                <% if !z.image_file_size.nil? %>
                  <%= image_tag z.image , class: "showimage" %>
                  <%= link_to "Delete Photo",admin_photo_path(z), :method => :delete  , remote: true , class: "photo_delete"%>
                <%else%>
                  <p>
                    Προσθέστε μια φωτογραφία
                  </p>
                <%end%>
              </div>
            <%end%>
          <%end%>
          <div class="control-group">
            <%= f.label :photos, :class => 'control-label' %>
            <div class="form-group">
              <%= file_field_tag "images[]", type: :file, multiple: true ,class: "form-control-file" %>
            </div>
          </div>
          <p>
            <%= f.submit nil , class: 'btn btn-primary' %>
          </p>
        <% end %>
        <%= link_to 'Back', admin_dashboard_path %>
      </div>
    </div>
  </div>
</div>
